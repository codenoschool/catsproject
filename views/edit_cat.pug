extends layout
block title
    title Edit Cat
block content
    h1 Edit some Cat
    form(method="post", action="/edit/" + cat._id)
        p
            label(for="name") Name 
            input#name(name="name", type="text", value=cat.name)
        p
            label(for="age") Age 
            input#age(name="age", type="number", value=cat.age)
        input(type="submit", value="Save")